@model OfferRideModel
@*
<div class="form-container">*@
<form class="CreateOffer">
       
        <body>
        
            <div class="form-container">
                <form>
                <h2 class="form-title"> <b> Offer Ride </b></h2>
                    <!-- Name Field -->
                    <@*label for="name">Name:</label>*@
                    <input type="text" id="name" name="name" placeholder="Enter your name" required>

                    <!-- Start Location Field -->
                    @*<label for="startLocation">Start Location:</label>*@
                    <input type="text" id="startLocation" name="startLocation" placeholder="Enter start location" required>

                    <!-- Destination Field -->
                    @*<label for="destination">Destination:</label>*@
                    <input type="text" id="destination" name="destination" placeholder="Enter destination" required>

                    <!-- Car Field -->
                   @* <label for="car">car:</label>*@
                    <input type="text" id="car" name="car" placeholder="Enter car name" required>

                    <!-- Seats Available Field -->
                    @*<label for="seatsAvailable">Seats Available:</label>*@
                    <input type="number" id="seatsAvailable" name="seatsAvailable" placeholder="Enter seats available" required>

                    <!-- Phone Number Field -->
                    @*<label for="phone">Phone Number:</label>*@
                    <input type="tel" id="phone" name="phone" placeholder="Enter your phone number (10 digits)" required pattern="^\d{10}$">

                    <!-- Departure Time Field -->
                    @*<label for="departureTime">Departure Time:</label>*@
                    <input type="text" id="departureTime" name="departureTime" placeholder="Enter departure time" required>

                    <!-- Submit Button -->
                    <input type="submit" value="Submit">
                </form>
            </div>
        </body>
    </html>



   
</form>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
      
}
