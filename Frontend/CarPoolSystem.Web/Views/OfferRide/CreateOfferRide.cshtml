@model OfferRideModel


<form method="post">

    <div class="row text-center p-3">
        <h1>Offer a Ride</h1>
    </div>
    <div class="row">
        <div class="col-5 offset-3 ">
            <label asp-for="Name" class="form-label">Name<span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" placeholder="Enter your full name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="Source" class="form-label">Start Location<span class="text-danger">*</span></label>
            <input asp-for="Source" class="form-control" placeholder="Enter your start location" required />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="Destination" class="form-label">Destination<span class="text-danger">*</span></label>
            <input asp-for="Destination" class="form-control" placeholder="Enter your destination" required />
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="Car_Name" class="form-label">Car Name<span class="text-danger">*</span></label>
            <input asp-for="Car_Name" class="form-control" placeholder="Enter your car name" required />
            <span asp-validation-for="Car_Name" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="Seat_Available" class="form-label">Seat Available<span class="text-danger">*</span></label>
            <input asp-for="Seat_Available" class="form-control" placeholder="Enter the number of available seats" required />
            <span asp-validation-for="Seat_Available" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="Phone_no" class="form-label">Phone Number<span class="text-danger">*</span></label>
            <input asp-for="Phone_no" class="form-control" placeholder="Enter your phone number (10 digits)" required pattern="^\d{10}$" />
            <span asp-validation-for="Phone_no" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3 ">
            <label asp-for="DepartureTime" class="form-label">Departure Time<span class="text-danger">*</span></label>
            <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
            <span asp-validation-for="DepartureTime" class="text-danger"></span>
        </div>
        <div class="col-5 offset-3  pb-2 ">
            <button type="submit" class="btn btn-success">Offer Ride</button>
        </div>
    </div>

</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}